{
  "name": "react-vite-ts-starter",
  "version": "0.1.0",
  "description": "React Vite Typescript Starter",
  "private": true,
  "author": "ismlhbb <ismail.habibi2104@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "lint": "eslint ./src/**/*.{js,jsx,ts,tsx}",
    "lint:fix": "eslint --fix ./src/**/*.{js,jsx,ts,tsx}",
    "lint:strict": "eslint --max-warnings=0 ./src/**/*.{js,jsx,ts,tsx,css,scss,md,json}",
    "prettier:check": "prettier -c ./src/**/*.{js,jsx,ts,tsx,css,scss,md,json}",
    "format": "prettier -w ./src/**/*.{js,jsx,ts,tsx,css,scss,md,json} --config ./.prettierrc.js",
    "prepare": "husky install"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.6.2",
    "@tailwindcss/forms": "^0.3.4",
    "axios": "^0.24.0",
    "clsx": "^1.1.1",
    "nprogress": "^0.2.0",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-helmet": "^6.1.0",
    "react-icons": "^4.3.1",
    "react-redux": "^7.2.6",
    "react-router-dom": "^5.3.0",
    "sass": "^1.43.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^14.1.0",
    "@commitlint/config-conventional": "^14.1.0",
    "@types/node": "^16.11.7",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-redux": "^7.1.20",
    "@types/react-router": "^5.1.17",
    "@types/react-router-dom": "^5.3.2",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "@vitejs/plugin-react": "1.0.5",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "postcss": "^8.3.11",
    "prettier": "^2.4.1",
    "tailwindcss": "^2.2.19",
    "typescript": "^4.3.2",
    "vite": "^2.6.4"
  },
  "lint-staged": {
    "./src/**/*.{js,jsx,ts,tsx,}": [
      "eslint --max-warnings=0",
      "prettier -w"
    ],
    "./src/**/*.{json,css,scss,md}": [
      "prettier -w"
    ]
  }
}
